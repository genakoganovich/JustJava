<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.justjava.MainActivity">

    <TextView
        android:id="@+id/quantity_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"

        android:text="Quantity"
        android:textAllCaps="true"
        android:textSize="16sp" />

    <Button
        android:id="@+id/plus_button"
        android:text="+"
        android:onClick="increment"
        android:textSize="16sp"
        android:layout_below="@id/quantity_label_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plus_button"
        android:paddingLeft="16dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/minus_button"
        android:text="-"
        android:onClick="decrement"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/quantity_text_view"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/price_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minus_button"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:text="Price"
        android:textAllCaps="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_label_text_view"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:text="$0"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text_view"
        android:layout_marginLeft="16dp"
        android:onClick="submitOrder"
        android:text="Order"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>
